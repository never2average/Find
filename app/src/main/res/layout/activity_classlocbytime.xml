<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fbf9dd"
    tools:context="com.example.priyeshsrivastava.findmyclass.classlocbytime"
    android:orientation="vertical">

     <TextView
            android:text="SEARCH CLASS BY DAY AND TIME"
            android:textSize="30dp"
            android:background="#fbf9dd"
            android:gravity="center"
         android:fontFamily="monospace"
            android:textAlignment="center"
            android:layout_marginTop="15dp"
            android:textColor="#02611a"
            android:textStyle="bold"
            android:layout_marginBottom="10dp"
            android:layout_weight="20"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"/>
    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Day"
                android:gravity="center"
                android:textSize="20dp"
                />
            <Spinner
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/spinner1" />
        </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="100"
            android:orientation="horizontal">
            <TextView
                android:layout_weight="40"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:text="Time Slot"
                android:gravity="center"
                android:textSize="20dp"
                />
            <Spinner
                android:layout_weight="60"
                android:layout_height="match_parent"
                android:layout_width="0dp"
                android:id="@+id/spinner2"
                />
        </LinearLayout>
    <LinearLayout
            android:layout_marginBottom="10dp"
            android:layout_weight="15"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="#fbf9dd"/>



    <Button
            android:layout_weight="10"
        android:textColor="#02611a"
            android:text="FIND MY CLASS"
            android:background="#fbf9ee"

            android:layout_gravity="center"
            android:layout_height="1dp"
            android:layout_width="120dp"
            android:layout_marginBottom="10dp"
            android:id="@+id/go"
            />
</LinearLayout>
